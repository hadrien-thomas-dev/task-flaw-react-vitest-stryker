{
    "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
    "testRunner": "vitest",
    "vitest": {
        "configFile": "vitest.config.ts"
    },
    "incremental": true,
    "mutate": [
        "src/**/*.{ts,tsx}",
        "!src/**/*.test.{ts,tsx}"
    ],
    "reporters": [
        "html",
        "clear-text",
        "progress",
        "dashboard"
    ]
}